{
  "name": "eslint-plugin-lint-my-lines",
  "version": "1.0.1",
  "description": "An ESLint plugin to enforce a style guide for code comments.",
  "main": "lib/index.js",
  "bin": {
    "lint-my-lines": "./bin/lint-my-lines.js"
  },
  "scripts": {
    "test": "mocha 'tests/lib/**/*.js'",
    "test:rules": "mocha 'tests/lib/rules/*.js'",
    "test:utils": "mocha 'tests/lib/utils/*.js'",
    "test:integration": "mocha 'tests/integration/**/*.js'",
    "test:parsers": "mocha 'tests/lib/rules/*-template-*.js'",
    "test:all": "npm run test && npm run test:integration",
    "bench": "node tests/benchmarks/performance.bench.js",
    "bench:check": "node tests/benchmarks/check-regression.js"
  },
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslint-plugin",
    "comments",
    "style-guide",
    "jsdoc",
    "tsdoc",
    "typescript",
    "vue",
    "svelte",
    "markdown"
  ],
  "author": "Ryan Goodrich <ryan@southpawriter.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/southpawriter02/lint-my-lines.git"
  },
  "bugs": {
    "url": "https://github.com/southpawriter02/lint-my-lines/issues"
  },
  "homepage": "https://github.com/southpawriter02/lint-my-lines#readme",
  "files": [
    "lib/",
    "bin/",
    "docs/",
    "STYLE_GUIDE.md",
    "CHANGELOG.md"
  ],
  "dependencies": {
    "commander": "^14.0.2",
    "comment-parser": "^1.4.1",
    "eslint": "^8.0.0",
    "mocha": "^10.0.0"
  },
  "peerDependencies": {
    "@typescript-eslint/parser": ">=5.0.0",
    "vue-eslint-parser": ">=9.0.0",
    "svelte-eslint-parser": ">=0.30.0"
  },
  "devDependencies": {
    "benchmark": "^2.1.4"
  },
  "peerDependenciesMeta": {
    "@typescript-eslint/parser": {
      "optional": true
    },
    "vue-eslint-parser": {
      "optional": true
    },
    "svelte-eslint-parser": {
      "optional": true
    }
  }
}
